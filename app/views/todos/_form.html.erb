<%= form_with(model: [todo.project, todo]) do |form| %>
  <div>
    <%= form.label :title, style: 'color: white' %>
    <%= form.text_field :title, class: 'form-control' %>
    <% if todo.errors.any? %>
      <div class="text">
        <% todo.errors.full_messages_for(:title).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.label :description, style: 'color: white' %>
    <%= form.text_field :description, class: 'form-control' %>
    <% if todo.errors.any? %>
      <div class="text">
        <% todo.errors.full_messages_for(:description).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="mt-3">
    <%= form.hidden_field :user_id, value: current_user.id,id: 'todo_user_id',class: 'form-control mt-2' %>
    <%= form.hidden_field :project_id %>
    <% if todo.errors.any? %>
      <div class="text">
        <% todo.errors.full_messages_for(:project_id).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-success'%>
    <%= link_to 'Cancel', request.referrer, class: 'btn btn-outline-white'%>
  </div>
<% end %>
