<%= turbo_frame_tag project do %>
  <hr>
  <div class="d-flex justify-content-between">
    <div class="titles">
      <h1 class="fw-normal"><%= link_to project.title , project, data: { turbo_frame: '_top'} %></h1>
      <p> Created: <%= time_ago_in_words(project.created_at) + ' ago'%>  | <%= project.todos.count %> Todo's</p>
    </div>
    <div class="d-flex gap-1">
      <p><%= link_to edit_project_path(project), data: { controller: 'bs-modal' }, class: 'btn btn-success' do %>
          <i class="bi bi-pen"></i>
        <% end %>
      </p>
      <p><%= button_to  project_path(project), method: :delete, class: 'btn btn-danger' do%>
          <i class="bi bi-trash"></i>
        <%end %>
      </p>
    </div>
  </div>
  <hr>
<% end %>
